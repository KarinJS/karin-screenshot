{
  "compilerOptions": {
    "target": "ES2022",
    "baseUrl": "./",
    "outDir": "./lib",
    "moduleResolution": "node",
    "module": "ES2022",
    "paths": {
      "@Common": [
        "src/imports/common.ts"
      ],
      "@imports/*": [
        "src/imports/*"
      ],
      "@logger": [
        "src/imports/logger.ts"
      ]
    },
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "src/index.ts"
  ],
  "tsc-alias": {
    "resolveFullExtension": ".cjs",
    "resolveFullPaths": true
  }
}